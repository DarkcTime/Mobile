<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/standartMargin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSelectedRecEditRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:id="@+id/textViewCountWordsEditRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/size_help"
            >

            <Button
                android:id="@+id/buttonPlayEditRec"
                style="@style/StyleButtonIconBig"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_play_arrow_black_24dp"
                android:onClick="onClickPlayEditRec"
                >
            </Button>
            <TextView
                android:id="@+id/textViewStartPositionEditRec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <SeekBar
                    android:id="@+id/seekBarPositionEditRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >
                </SeekBar>
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/size_help"
                >

                <Button
                    android:id="@+id/buttonSaveEditRec"
                    android:onClick="onClickButtonSaveEditRec"
                    style="@style/StyleButtonIconBig"
                    android:background="@drawable/ic_save"
                    android:layout_marginRight="40dp"
                    />

                <Button
                    android:id="@+id/buttonCopyEditRec"
                    android:onClick="onClickButtonCopyEditRec"
                    style="@style/StyleButtonIconBig"
                    android:background="@drawable/ic_content_copy_black_24dp"
                    android:layout_marginRight="40dp"
                    />


                <Button
                    android:id="@+id/buttonTranslatedText"
                    android:onClick="onClickButtonTranslatedText"
                    style="@style/StyleButtonIconBig"
                    android:background="@drawable/audtotext"
                    />

            </LinearLayout>
        </RelativeLayout>

        <EditText android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="@dimen/standartMargin"
                  android:background="@drawable/border_line"
                  android:inputType="textMultiLine"
                  android:gravity="top|left"
                  tools:ignore="RtlHardcoded"
                  android:id="@+id/editTextEditRec"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayoutWait">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewTimeTranslate"
                        style="@style/StyleTextViewSmall"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <ProgressBar
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/StyleTextViewHeader"
                        android:text="@string/wait"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>