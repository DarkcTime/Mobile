<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_help"
            android:layout_marginBottom="105dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="125dp"
                        android:background="@color/grey"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">
                            <TextView
                                style="@style/StyleTextViewMiddle"
                                android:id="@+id/textViewNameContact"
                                android:layout_marginVertical="2dp"
                                >

                            </TextView>
                            <TextView
                                style="@style/StyleTextViewMiddle"
                                android:id="@+id/textViewPhoneContact"
                                android:layout_marginVertical="2dp"
                                >

                            </TextView>
                            <TextView
                                style="@style/StyleTextViewMiddle"
                                android:id="@+id/textViewCountReady"
                                android:layout_marginVertical="2dp"
                                >

                            </TextView>
                            <TextView
                                style="@style/StyleTextViewMiddle"
                                android:id="@+id/textViewNeedMin"
                                android:layout_marginVertical="2dp"
                                >

                            </TextView>
                            <TextView
                                style="@style/StyleTextViewMiddle"
                                android:id="@+id/textViewNeedWords"
                                android:layout_marginVertical="2dp"
                                >

                            </TextView>
                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            style="@style/StyleButtonIconBig"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/que"
                            android:onClick="onClickButtonHelpAboutContact">

                        </Button>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <EditText android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/standartMargin"
                android:background="@drawable/border_line"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                tools:ignore="RtlHardcoded"
                android:id="@+id/editTextEditRec"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/size_help"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    style="@style/StyleButtonIconBig2"
                    android:background="@drawable/audio"
                    android:onClick="onClickButtonSelectRecord"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    style="@style/StyleButtonIconBig2"
                    android:background="@drawable/cancel"
                    android:onClick="onClickButtonCancel"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>