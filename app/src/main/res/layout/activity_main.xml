<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/mini"
    android:layout_marginTop="@dimen/standard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linerLayoutNoRecords"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="@style/ButtonStyle.LongBlue"
                android:layout_centerInParent="true"
                android:text="@string/I_know_where_records_rus"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="@style/ButtonStyle.LongBlue"
                android:layout_centerInParent="true"
                android:text="@string/I_have_not_records_rus"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linerLayoutListRecords"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/standard">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="90"
                style="@style/EditTextStyle.Search"
                android:drawableLeft=
                    "@drawable/ic_search_black_32dp"
                android:background="@drawable/routed_edittext"
                android:id="@+id/editTextSearch"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:background="@drawable/ic_more_vert_black_24dp"
                />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            android:id="@+id/listViewContactsMA"/>
    </LinearLayout>

</LinearLayout>