<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/design_default_color_primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="StandardStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="StandardStyle">

    </style>
    <style name="ButtonStyle.LongBlue" parent="ButtonStyle">
        <item name="android:background">@color/blue</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonStyle.SmallBlue" parent="ButtonStyle">
        <item name="android:background">@color/blue</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="StandardStyle">

    </style>
    <style name="EditTextStyle.Search" parent="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextViewStyle" parent="StandardStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="TextViewStyle.Big" parent="TextViewStyle">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="StyleListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="StyleSpace">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
    <style name="StyleSpaceHeight" parent="@style/StyleSpace">

        <item name="android:layout_width">0dp</item>

    </style>
    <style name="StyleSpaceWidth" parent="@style/StyleSpace">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">35dp</item>

    </style>
    <style name="StyleButtonIconSmall">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="StyleButtonIconBig">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="StyleButtonIconBig2">
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">78dp</item>
    </style>
    <style name="StyleButtonIconHigh">
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">126dp</item>
    </style>
    <style name="StyleButtonHelpLong">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StyleButtonHelpShort">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StyleTextViewSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleTextViewMiddle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleTextViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBarSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    #common style
    <style name="standard_style">
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="style_button" parent="standard_style">
        <item name="android:textSize">16sp</item>
    </style>

    #style dark design
    #buttons
    <style name="style_dark_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="style_dark_button_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/routed_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    #text
    <style name="style_textview_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="style_textview_white_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>


</resources>
